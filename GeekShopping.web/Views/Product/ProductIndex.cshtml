@model IEnumerable<GeekShopping.web.Models.ProductModel>

    <style>
    .btn-tamanho{
        width:18px;
        height:40px
    }
    </style>

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Products NERDS List</h1>

        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-primary">
                <i class=""> Create new product</i>
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <td>Name</td>
                <td>Category</td>
                <td>Value</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CategoryName</td>
                    <td>@((item.Value).ToString("c"))</td>
                    @*aqui coloquei os dois botaos em um unico td, e o if fazendo a verificação do Admin*@
                    <td>
                       <a asp-action="ProductUpdate" class="btn-success" asp-route-id="@item.Id" >
                        <i class="fas fa-edit btn-tamanho"></i>
                       </a>
                    
                    @if(User.IsInRole("Admin"))
                    {
                            <a asp-action="ProductDelete" class="btn-danger" asp-route-id="@item.Id">
                                <i class="fas fa-trash btn-tamanho"></i>
                            </a>   
                    }
              
                       
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
